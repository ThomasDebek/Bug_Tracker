<div id="<%= dom_id issue %>">
  <p>
    <strong>Title:</strong>
    <%= issue.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= issue.description %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= issue.status %>
  </p>

  <p>
    <strong>Priority:</strong>
    <%= issue.priority %>
  </p>

  <p>
    <strong>Assigned to:</strong>
    <%= issue.assigned_to %>
  </p>

  <p>
    <strong>Due date:</strong>
    <%= issue.due_date %>
  </p>

  <p>
    <strong>Project:</strong>
    <%= issue.project_id %>
  </p>

</div>
