<!-- Project title & description -->
<div class="mb-8">
  <h1 class="text-3xl font-bold text-indigo-600 mb-2"><%= @project.name %></h1>
  <p class="text-gray-700 text-lg"><%= @project.description %></p>
</div>

<!-- Dashboard -->
<h2 class="text-2xl font-semibold mb-4">ðŸ“Š Project Dashboard</h2>
<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
  <div class="bg-green-100 text-green-800 p-4 rounded-lg shadow flex flex-col items-center">
    <span class="text-sm font-medium">Open</span>
    <span class="text-xl font-bold"><%= @project.open_issues_count %></span>
  </div>
  <div class="bg-yellow-100 text-yellow-800 p-4 rounded-lg shadow flex flex-col items-center">
    <span class="text-sm font-medium">In Progress</span>
    <span class="text-xl font-bold"><%= @project.in_progress_issues_count %></span>
  </div>
  <div class="bg-blue-100 text-blue-800 p-4 rounded-lg shadow flex flex-col items-center">
    <span class="text-sm font-medium">Closed</span>
    <span class="text-xl font-bold"><%= @project.closed_issues_count %></span>
  </div>
  <div class="bg-red-100 text-red-800 p-4 rounded-lg shadow flex flex-col items-center">
    <span class="text-sm font-medium">Overdue</span>
    <span class="text-xl font-bold"><%= @project.overdue_issues_count %></span>
  </div>
</div>

<hr class="mb-8 border-gray-300">

<!-- Issues list -->
<h3 class="text-2xl font-semibold mb-4">Issues in this project</h3>

<div class="space-y-4">
  <% @project.issues.each do |issue| %>
    <div class="bg-white p-4 rounded-lg shadow hover:shadow-md transition flex flex-col md:flex-row md:justify-between md:items-center">
      <div class="mb-2 md:mb-0">
        <strong class="text-lg text-indigo-600"><%= link_to issue.title, issue %></strong>
        <div class="text-gray-600 text-sm mt-1">
          Status: <span class="font-medium capitalize"><%= issue.status %></span> |
          Priority: <span class="font-medium capitalize"><%= issue.priority %></span> |
          Due: <span class="font-medium"><%= issue.due_date %></span>
        </div>
      </div>

      <!-- Action buttons -->
      <div class="flex space-x-2">
        <% if issue.open? %>
          <%= button_to "Start Work", start_work_issue_path(issue), method: :patch, data: { confirm: "Change status to In Progress?" }, class: "bg-yellow-400 hover:bg-yellow-500 text-white font-semibold px-3 py-1 rounded" %>
          <%= button_to "Close", close_issue_path(issue), method: :patch, data: { confirm: "Close this issue?" }, class: "bg-red-500 hover:bg-red-600 text-white font-semibold px-3 py-1 rounded" %>
        <% elsif issue.in_progress? %>
          <%= button_to "Close", close_issue_path(issue), method: :patch, data: { confirm: "Close this issue?" }, class: "bg-red-500 hover:bg-red-600 text-white font-semibold px-3 py-1 rounded" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>