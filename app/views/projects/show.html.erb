<h1><%= @project.name %></h1>
<p><%= @project.description %></p>

<!-- Dashboard -->
<h2>ğŸ“Š Project Dashboard</h2>
<div style="display: flex; gap: 20px; margin-bottom: 20px;">
  <div>ğŸŸ¢ Open: <strong><%= @project.open_issues_count %></strong></div>
  <div>ğŸŸ¡ In Progress: <strong><%= @project.in_progress_issues_count %></strong></div>
  <div>ğŸ”µ Closed: <strong><%= @project.closed_issues_count %></strong></div>
  <div>ğŸ”´ Overdue: <strong><%= @project.overdue_issues_count %></strong></div>
</div>

<hr>

<!-- Lista Issue -->
<h3>Issues in this project</h3>

<% @project.issues.each do |issue| %>
  <div style="margin-bottom: 10px; border-bottom: 1px solid #ccc;">
    <strong><%= link_to issue.title, issue %></strong>
    | Status: <%= issue.status %>
    | Priority: <%= issue.priority %>
    | Due: <%= issue.due_date %>

    <% if issue.open? %>
      <%= button_to "Start Work", start_work_issue_path(issue), method: :patch, data: { confirm: "Change status to In Progress?" } %>
      <%= button_to "Close", close_issue_path(issue), method: :patch, data: { confirm: "Close this issue?" } %>
    <% elsif issue.in_progress? %>
      <%= button_to "Close", close_issue_path(issue), method: :patch, data: { confirm: "Close this issue?" } %>
    <% end %>
  </div>
<% end %>